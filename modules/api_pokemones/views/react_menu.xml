<odoo>
    <!-- Menú raíz -->
    <menuitem id="menu_api_pokemon_root"
              name="Pokemones"
              sequence="10"/>

    <!-- Nueva acción (con ID diferente al anterior) -->
    <record id="action_api_pokemon_react_url" model="ir.actions.act_url">
        <field name="name">React App</field>
        <field name="url">/pokemon</field>
        <field name="target">self</field>
    </record>

    <!-- Submenú que llama a la nueva acción -->
    <menuitem id="menu_api_pokemon_app"
              name="React App"
              parent="menu_api_pokemon_root"
              action="action_api_pokemon_react_url"
              sequence="1"/>
</odoo>
