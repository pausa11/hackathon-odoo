<?xml version="1.0"?>
<odoo>
    <!-- AcciÃ³n de ventana -->
    <record id="inventory_product_action" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">inventory.product</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Vista de lista -->
    <record id="view_inventory_product_tree" model="ir.ui.view">
        <field name="name">inventory.product.tree</field>
        <field name="model">inventory.product</field>
        <field name="arch" type="xml">
            <list string="Products">
                <field name="name"/>
                <field name="description"/>
                <field name="price"/>
                <field name="quantity"/>
                <field name="active"/>
            </list>
        </field>
    </record>
</odoo>
